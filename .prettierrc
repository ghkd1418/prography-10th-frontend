{
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"arrowParens": "always",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^(react|react-dom|react-router-dom)$",
		"<THIRD_PARTY_MODULES>",
		"^@app/(.*)$",
		"^@entities/(.*)$",
		"^@features/(.*)$",
		"^@pages/(.*)$",
		"^@shared/(.*)$",
		"import type",
		"^[./]",
		"\\.css$",
		"\\.scss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
